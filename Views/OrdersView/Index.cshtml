@model  IPagedList<Jindo_Capstone.Models.Order>

@{
    ViewBag.Title = "Index";
}
@using PagedList;
@using PagedList.Mvc;
<h2>Index</h2>
@*
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
